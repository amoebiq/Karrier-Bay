<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yourapp.developer.karrierbay">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyAoO982LyvlPW4VQevHR-voXPRpoztlqlc" />

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_kb_notify" />
        <meta-data android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorPrimary" />

        <activity
            android:name="com.ucarry.developer.android.activity.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ucarry.developer.android.activity.SignUpActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name="com.ucarry.developer.android.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.ucarry.developer.android.activity.SenderListActivityListActivity"
            android:label="@string/title_senderlistactivity_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.ucarry.developer.android.activity.SenderListActivityDetailActivity"
            android:label="@string/title_senderlistactivity_detail"
            android:parentActivityName="com.ucarry.developer.android.activity.SenderListActivityListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ucarry.developer.android.activity.SenderListActivityListActivity" />
        </activity>
        <activity
            android:name="com.ucarry.developer.android.activity.CarrierListActivity"
            android:label="@string/title_carrier_list"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name="com.ucarry.developer.android.activity.CarrierDetailActivity"
            android:label="@string/title_carrier_detail"
            android:parentActivityName="com.ucarry.developer.android.activity.CarrierListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.yourapp.developer.karrierbay.activity.CarrierListActivity" />
        </activity>
        <service
            android:name="com.ucarry.developer.android.Utilities.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>

        <service
            android:name="com.ucarry.developer.android.Utilities.FBMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
    </application>

</manifest>