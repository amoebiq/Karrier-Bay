<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yourapp.developer.karrierbay">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/kb_xxhdpi_144px"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyAoO982LyvlPW4VQevHR-voXPRpoztlqlc" />

        <activity
            android:name="activity.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="activity.SignUpActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name="activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="activity.SenderListActivityListActivity"
            android:label="@string/title_senderlistactivity_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="activity.SenderListActivityDetailActivity"
            android:label="@string/title_senderlistactivity_detail"
            android:parentActivityName="activity.SenderListActivityListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="activity.SenderListActivityListActivity" />
        </activity>
        <activity
            android:name="activity.CarrierListActivity"
            android:label="@string/title_carrier_list"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name="activity.CarrierDetailActivity"
            android:label="@string/title_carrier_detail"
            android:parentActivityName="activity.CarrierListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.yourapp.developer.karrierbay.activity.CarrierListActivity" />
        </activity>
    </application>

</manifest>