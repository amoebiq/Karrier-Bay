<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="handler"
            type="com.ucarry.developer.android.Fragment.ProfileFragment.ProfileHandler"></variable>
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/profilepic"
                        android:layout_width="40dp"
                        android:layout_height="60dp"
                        android:layout_weight="0.5"
                        android:layout_centerInParent="true"
                        android:src="@drawable/carrier" />

                    <TextView
                        android:id="@+id/name_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_below="@id/profilepic"
                        android:text="Shuhail"
                        android:textColor="@color/textColorWhite"
                        android:textStyle="bold" />


                    <EditText
                        android:id="@+id/location_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="address"
                        android:layout_below="@+id/name_header"
                        android:layout_margin="@dimen/edit_text_gap"
                        android:gravity="center"
                        android:inputType="none"
                        android:textColor="@color/textColorWhite"
                        android:textSize="@dimen/font_size"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/edit_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_white"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/location_edittext"
                        />

                </RelativeLayout>





                <RelativeLayout
                    android:id="@+id/seperator1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/header"
                    android:layout_margin="@dimen/edit_text_gap">

                    <TextView
                        android:id="@+id/seperator_1_1"
                        style="?android:attr/listSeparatorTextViewStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Contact Details" />


                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/contact_details_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/seperator1"
                    android:layout_margin="@dimen/edit_text_gap">


                </RelativeLayout>




                <RelativeLayout
                    android:id="@+id/phone_number_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/contact_details_section"
                    android:layout_margin="@dimen/edit_text_gap">

                    <TextView
                        android:id="@+id/phone_number_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/edit_text_gap"
                        android:text="@string/tv_phone_number"
                        android:textColor="@color/greyColor"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/phone_number_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="@dimen/edit_text_gap"
                        android:layout_toRightOf="@id/phone_number_tv"
                        android:inputType="none"
                        android:text="123"
                        android:textColor="@color/textColorDark"
                        android:textSize="@dimen/font_size"
                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/email_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/phone_number_details"
                    android:layout_margin="@dimen/edit_text_gap">

                    <TextView
                        android:id="@+id/email_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/edit_text_gap"
                        android:text="@string/prompt_email"
                        android:textColor="@color/greyColor"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/email_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_margin="@dimen/edit_text_gap"
                        android:layout_toRightOf="@id/email_tv"

                        android:inputType="none"
                        android:textColor="@color/textColorDark"
                        android:textSize="@dimen/font_size"
                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/seperator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/email_details">

                    <TextView
                        android:id="@+id/address_label"
                        style="?android:attr/listSeparatorTextViewStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Documents" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/aadhar_upload_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/seperator"
                    android:layout_margin="@dimen/edit_text_gap">

                    <TextView
                        android:id="@+id/aadhar_upload"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/edit_text_gap"
                        android:text="@string/prompt_aadhar"
                        android:textColor="@color/textColorDark"
                        android:textSize="13sp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/attachment"
                        android:id="@+id/aadhar_attachment"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/verified"
                        android:id="@+id/aadhar_attachment_verified"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Verification Pending"
                        android:textSize="10dp"
                        android:textColor="@color/colorPrimary"
                        android:gravity="right"
                        android:id="@+id/pending_notofication"/>

                </RelativeLayout>

                <Button
                    android:id="@+id/profile_save_button"
                    style="?android:textAppearanceSmall"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/aadhar_upload_rl"

                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/button_gap"
                    android:background="@drawable/button_outline"
                    android:text="@string/action_save"
                    android:textColor="@color/textColorWhite"
                    android:textSize="@dimen/font_size_hint"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</layout>